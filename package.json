{
  "name": "react-native-iaptic",
  "version": "1.0.0",
  "description": "React Native In-App Purchase library with Iaptic receipt validation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "buildw": "tsc -w",
    "prepare": "npm run build",
    "test": "jest --setupFiles ./jest.setup.js",
    "lint": "eslint src/**/*.ts",
    "docs": "typedoc --excludeInternal --excludePrivate src/index.ts",
    "docs-md": "typedoc --excludeInternal --excludePrivate --plugin typedoc-plugin-markdown --out ./docs-markdown.tmp --outputFileStrategy modules src/index.ts && ./postprocessMarkdown",
    "prepublishOnly": "npm run build && npm run docs-md"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.1.0",
    "react-native-iap": "^12.16.1"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.64.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "typescript": "^5.0.0",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/react-native": "^12.4.0",
    "@types/base-64": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@types/react": "18.3.1",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "base-64": "^1.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1"
  },
  "keywords": [
    "react-native",
    "in-app purchases",
    "iap",
    "receipt validation",
    "subscriptions",
    "iaptic"
  ],
  "author": "Iaptic <support@iaptic.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iaptic/iaptic-react-native-sdk"
  },
  "bugs": {
    "url": "https://github.com/iaptic/iaptic-react-native-sdk/issues"
  },
  "homepage": "https://www.iaptic.com/documentation/react-native",
  "typesVersions": {
    "*": {
      "*": ["lib/*"]
    }
  }
}
