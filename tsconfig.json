{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["react-native", "jest", "node"],
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react-native",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
